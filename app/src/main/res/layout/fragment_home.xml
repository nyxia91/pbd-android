<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <Button
            android:id="@+id/alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alarm"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:minHeight="70dp"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/sleep_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sleep Timer"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:minHeight="70dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/battery_saver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Battery Saver"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:minHeight="70dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/sleep_monitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sleep Monitor"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:minHeight="70dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/safety_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Safety Speed"
            android:textAlignment="center"
	        android:layout_centerHorizontal="true"
            android:minHeight="70dp"
            android:textSize="20dp"/>

    </LinearLayout>


</RelativeLayout>
